---
title: Rainettes - Info
---

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-6 hidden-xs bigcard map-holder">
      <!-- The map will be drawn in this div -->
      <div id="map"></div>

      <script src="https://maps.google.com/maps/api/js?sensor=false"></script>
      <script src="https://google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js"></script>

      <!-- Require jQuery and Google map For rails javascript lib -->
      <script src="https://wagon-google-maps-markers.herokuapp.com/assets/application-5034196864c74ae1cc5f12e6d1f71223.js" type="text/javascript"></script>

      <script type="text/javascript">
        $(document).on('ready', function() {
          var handler = Gmaps.build('Google');
          handler.buildMap({ internal: { id: 'map' } }, function(){
            markers = handler.addMarkers([
                { "lat": 51.752165 , "lng": -1.256998 }
              ]);
            handler.bounds.extendWith(markers);
            handler.fitMapToBounds();
            handler.getMap().setZoom(16);
          });
        })
      </script>
    </div>
    <div class="col-xs-12 col-sm-6 bigcard info-holder">
      <div class="informations">
        <%= image_tag "artwork.png" %>
        <div class="infotxt">
          <p id="address"><% link_to "http://maps.google.com/?q=" + t(:address) do %><%= t(:address) %><% end %></p>
          <div id="horaires">
            <p><%= t(:info)[:hours1] %></p>
            <p><%= t(:info)[:hours2] %></p>
          </div>
          <p id="contact"><%= t(:info)[:telephone] %> - <%= t(:info)[:email] %> </p>
        </div>
      </div>
    </div>
  </div>
</div>
